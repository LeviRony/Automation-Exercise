<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Playwright Cross-Browser Suite"
       parallel="tests"
       thread-count="3">

    <!-- Chromium -->
    <test name="Chromium Tests">
        <parameter name="browserName" value="chromium"/>
        <classes>
            <class name="HomePage"/>
        </classes>
    </test>

    <!-- Firefox -->
    <test name="Firefox Tests">
        <parameter name="browserName" value="firefox"/>
        <classes>
            <class name="HomePage"/>
        </classes>
    </test>

    <!-- WebKit -->
    <test name="WebKit Tests">
        <parameter name="browserName" value="webkit"/>
        <classes>
            <class name="HomePage"/>
        </classes>
    </test>

</suite>